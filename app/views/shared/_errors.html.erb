<% if resource.errors.any? %>
  <div style="color: red">
    <h2>
      <%= t('.header', count: resource.errors.count, resource: resource.model_name.human) %>
    </h2>

    <ul>
      <% resource.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>