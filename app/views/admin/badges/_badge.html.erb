<tr>
    <td style="text-align:center;"><%= image_tag( badge.image_url, size: "30x30", alt: t('.alt_image_tag')) %></td>
    <td><%= badge.name %></td>
    <td><%= badge.rule %></td>
    <td class="text-center"><%= badge.parameter %></td>
    <td><%= button_to t('.show'), admin_badge_path(badge), method: :get, class: "btn btn-outline-dark" %></td>
    <td><%= button_to t('.edit'), edit_admin_badge_path(badge), method: :get, class: "btn btn-outline-dark" %></td>

    <td>
        <%= button_to t('.delete'),
        admin_badge_path(badge),
        method: :delete,
        form: {
            data: {
                turbo_confirm: t('.confirm')
                }
        },
        class: "btn btn-danger"
        %>
    </td>
</tr>