<tr>
  <td><%= test.title %></td>
  <td class="text-center"><%= test.level %></td>
  <td><%= test.category.title %></td>
  <td class="text-center"><%= test.questions.size %></td>
  <td class="text-center"><%= test.ready_to_be_run %></td>
  <td><%= button_to t('.show'), admin_test_path(test), class: "btn btn-outline-dark" %></td>
  <td><%= button_to t('.edit'), edit_admin_test_path(test), class: "btn btn-outline-dark" %></td>

  <td>
    <%= button_to t('.delete'),
                  admin_test_path(test),
                  method: :delete,
                  form: {
                    data: {
                      turbo_confirm: t('.confirm')
                    }
                  },
                  class: "btn btn-danger"
    %>
  </td>
</tr>